<p id="notice"><%= notice %></p>
<% if !@packages.nil?%>
<h1>Listing Packages</h1>

<table>
  <thead>
    <tr>
      <th>Package</th>
      <th>Sender</th>
      <th>Receiver</th>
      <th>Content</th>
      <th>Length</th>
      <th>Width</th>
      <th>Height</th>
      <th>Weight</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= package.package_id %></td>
        <td><%= package.sender_id %></td>
        <td><%= package.receiver_id %></td>
        <td><%= package.content %></td>
        <td><%= package.length %></td>
        <td><%= package.width %></td>
        <td><%= package.height %></td>
        <td><%= package.weight %></td>
        <td><%= package.price %></td>
        <td><%= link_to 'Show', package %></td>
        <td><%= link_to 'Edit', edit_package_path(package) %></td>
        <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    <%end%>

<% if !@sendPackages.nil?%>
<h1>Send Packages</h1>

<table>
  <thead>
  <tr>
    <th>Package</th>
    <th>Sender</th>
    <th>Receiver</th>
    <th>Content</th>
    <th>Length</th>
    <th>Width</th>
    <th>Height</th>
    <th>Weight</th>
    <th>Price</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @sendPackages.each do |package| %>
      <tr>
        <td><%= package.package_id %></td>
        <td><%= package.sender_id %></td>
        <td><%= package.receiver_id %></td>
        <td><%= package.content %></td>
        <td><%= package.length %></td>
        <td><%= package.width %></td>
        <td><%= package.height %></td>
        <td><%= package.weight %></td>
        <td><%= package.price %></td>
        <td><%= link_to 'Show', package %></td>
        <% if current_user.try(:admin?) %>
         <td><%= link_to 'Edit', edit_package_path(package) %></td>
         <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>
<%end%>
<br>
<% if current_user.try(:admin?) %>
<%= link_to 'New Package', new_package_path %>
<% end %>